- content_for :head do
  =stylesheet_link_tag 'kebapress/application'

- content_for :foot do
  = javascript_include_tag 'kebapress/posts'


.panel.panel-default
  .panel-heading
    %i.icon-edit-.icon-large
    = yield :form_title

  .panel-body
    = simple_form_for [:hq, @post] do |f|
      = f.error_notification

      .form-inputs
        = f.input :title
        = f.label :body
        = f.input :body, input_html: { id: 'post_body' }, as: :hidden
        .editable{data: {field: {id: 'body'}, placeholder: ' '}}

        %br
        = f.input :published, as: :boolean, label: false, inline_label: true
        = f.input :commentable, as: :boolean, label: false, inline_label: true

        = f.label "Categories"
        - @categories.each do |category|
          .categories.checkbox
            =check_box_tag 'post[category_ids][]', category.id, @post.categories.include?(category)
            =category.title

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to 'Cancel', '/blog/hq', class: 'btn'