.post
	.title.page-header
		%h1= @post.title
	.info
		%p= @post.published_at.to_date
	.body
		%p= @post.body
	.bottom
		.categories
			%h5= "Categories:"
			- @post.categories.each do |category|
				%span.label.label-info= link_to category.title + ", ", "#"

		.tags
			%h5= "Tags:"
			- @post.tags.each do |tag|
				%span.label.label-info= link_to tag.title + ", ", "#"